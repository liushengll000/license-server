// 数据库配置
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 生成数据库客户端
generator client {
  provider = "prisma-client-js"
}

// 激活码数据表，存激活码、是否用过、绑定的设备ID
model LicenseCode {
  id        Int      @id @default(autoincrement()) // 自增ID，不用管
  code      String   @unique // 激活码，保证不重复
  used      Boolean  @default(false) // 是否使用过，默认没用
  deviceId  String? // 绑定的设备ID，激活后才填
  createdAt DateTime @default(now()) // 生成时间，自动的
}
